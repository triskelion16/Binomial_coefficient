<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#455A64"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/symbolView"
        android:layout_width="253dp"
        android:layout_height="84dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/binomial_coefficient_symbol"
        android:src="@drawable/binomial_coefficient" />

    <TextView
        android:id="@+id/conditionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/symbolView"
        android:layout_marginTop="5dp"
        android:text="@string/condition_n_k"
        android:textSize="15sp"
        android:textColor="#FFF"/>

    <TextView
        android:id="@+id/mainTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/conditionTextView"
        android:layout_marginTop="15dp"
        android:text="@string/calculate_binomial_coefficient"
        android:textSize="22sp"
        android:textColor="#FFF"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/nTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mainTextView"
        android:layout_marginTop="15dp"
        android:layout_marginStart="35dp"
        android:text="@string/n"
        android:textSize="26sp"
        android:textColor="#FFF"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/nEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mainTextView"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@id/nTextView"
        android:textAlignment="center"
        android:ems="2"
        android:inputType="number"
        android:maxLength="2"
        android:text="@string/_1_1"
        android:textSize="26sp"
        android:textColor="#FFF"
        android:importantForAutofill="no"/>

    <TextView
        android:id="@+id/kTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nTextView"
        android:layout_marginTop="15dp"
        android:layout_marginStart="35dp"
        android:text="@string/k"
        android:textSize="26sp"
        android:textColor="#FFF"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/kEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nTextView"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@id/kTextView"
        android:textAlignment="center"
        android:ems="2"
        android:inputType="number"
        android:maxLength="2"
        android:text="@string/_1_2"
        android:textSize="26sp"
        android:textColor="#FFF"
        android:importantForAutofill="no"/>

    <Button
        android:id="@+id/calculateButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/kTextView"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:background="@drawable/my_button"
        android:text="@string/calculate"
        android:textColor="#FFF"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/resultTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/calculateButton"
        android:layout_marginTop="20dp"
        android:layout_marginStart="35dp"
        android:text="@string/result"
        android:textSize="24sp"
        android:textColor="#FFF"/>

    <TextView
        android:id="@+id/scoreTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/calculateButton"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@id/resultTextView"
        android:layout_marginStart="10dp"
        android:text="@string/_1_3"
        android:textSize="24sp"
        android:textColor="#FFF"
        android:textStyle="bold" />

</RelativeLayout>
